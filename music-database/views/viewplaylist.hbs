<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Note Dream</title>
<link rel="stylesheet" href="style.css">
</head>
<body>
<div id='mainContent'>
  <h1>Note Dream</h1> <!-- Title above the taskbar -->
  <div class="taskbar">
    <div class="task">
      <a href='/users/register'>Sign Up</a>
      <a href="/" class="home-link">Back to Homepage</a>
    </div>
  </div>
  <div class="content">
    {{#if playlistID}}
      <h1><strong>{{playlistName}}</strong></h1>
      <p>{{description}}</p>
      {{#each errors}}
        <div class='alert alert-danger'>
          {{this}}
        </div>
      {{/each}}
      {{#if editor}}
        <a href='/users/editplaylist/{{playlistID}}' class='btn btn-outline-info'>Edit Playlist</a>
      {{/if}}
      <table class='songTable'>
        <tr>
          <td class='columnLabels'>Name:</td>
          <td class='columnLabels'>Genre:</td>
          <td class='columnLabels'>Artist:</td>
        </tr>
        {{#each songsInList}}
          <tr>
            <td class='cell'>{{name}}</td>
            <td class='cell'>{{genre}}</td>
            <td class='cell'>{{artist}}</td>
          </tr>
        {{/each}}
      </table>
    {{/if}}
  </div>
</div>
</body>
</html>
