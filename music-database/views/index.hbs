<div id='mainContent'>
  <h1>Note Dream</h1> <!-- Title above the taskbar -->
  <div class="taskbar">
    <div class="task">
      {{#if user}}
        Welcome, {{user.username}}!
        <a href='/users/logout'>Log Out</a>
        <a href='/users/change-password'>Change Password</a>

      {{else}}
        <a href='/users/login'>Log In</a>
        <a href='/users/register'>Sign Up</a>
      {{/if}}
    </div>
  </div>

  <div class="description">
    <p>Welcome to our music streaming platform!</p>
    <p>Discover new music, save your favorite songs, and create playlists to fit every mood.</p>
    <p>Join us today to start enjoying the ultimate music experience.</p>
  </div>

  {{#if user}}
    
    
    <a href='/users/accountSettings'>Account Settings</a>
  {{else}}
    <a href='/users/login'>Log In</a>
    <a href='/users/register'>Sign Up</a>
  {{/if}}
  {{#each errors}}
    <div class='alert alert-danger'>
      {{this}}
    </div>
  {{/each}}

  {{#if user}}
    <a href='/users/playlist' class='btn btn-outline-info'>Go to Playlists</a>
  {{/if}}
</div>
