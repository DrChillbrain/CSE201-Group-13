<div class='container'>
  <h1>Change Password</h1>
  {{#each errors}}
    <div class='alert alert-danger'>
      {{this}}
    </div>
  {{/each}}
  <form method='post'>
    <div class='form-group'>
      <label for='newPassword'>New Password</label>
      <input
        class='form-control'
        id='newPassword'
        type='newPassword'
        name='newPassword'
      />
    </div>
    <div class='form-group'>
      <label for='confPassword'>Confirm Password</label>
      <input
        class='form-control'
        id='confPassword'
        type='confPassword'
        name='confPassword'
      />
    </div>
    <button class='btn btn-primary' type='submit'>Submit</button>
  </form>
</div>