<div id='mainContent'>
  <h1>Note Dream</h1> <!-- Title above the taskbar -->
  <div class="taskbar">
    <div class="task">
      <a>Change Password</a>
      <a href="/" class="home-link">Back to Homepage</a>
    </div>
  </div>

  {{#each errors}}
    <div class='alert alert-danger'>
      {{this}}
    </div>
  {{/each}}
  <form method='post'>
    <div class='form-group'>
      <label for='newPassword'>New Password</label>
      <input
        class='form-control'
        id='newPassword'
        type='newPassword'
        name='newPassword'
      />
    </div>
    <div class='form-group'>
      <label for='confPassword'>Confirm Password</label>
      <input
        class='form-control'
        id='confPassword'
        type='confPassword'
        name='confPassword'
      />
    </div>
    <button class='btn btn-primary' type='submit'>Submit</button>
  </form>
</div>

