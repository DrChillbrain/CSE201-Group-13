<div id='mainContent'>
  <h1>Note Dream</h1> <!-- Title above the taskbar -->
  <div class="taskbar">
    <div class="task">
      <a>Change Profile Username</a>
      <a href='/users/accountSettings' class="home-link">Back to Accont Setting</a>
    </div>
  </div>

  {{#each errors}}
    <div class='alert alert-danger'>
      {{this}}
    </div>
  {{/each}}
  <hr>
  <label for="currentProfilePic">Current Profile Username: {{username}}</label>
  <hr>
  <form method='post'>
    <div class='form-group'>
      <label for='name'>New Profile Username</label>
      <input class='form-control' id='username' name='username' />
    </div>
    <button class='btn btn-danger' type='submit'>Submit</button>
  </form>
</div>