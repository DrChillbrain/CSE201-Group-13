<div class='container'>
  <h1>Change Profile Username</h1>
  {{#each errors}}
    <div class='alert alert-danger'>
      {{this}}
    </div>
  {{/each}}
  <hr>
  <label for="currentProfilePic">Current Profile Username: {{username}}</label>
  <hr>
  <form method='post'>
    <div class='form-group'>
      <label for='name'>New Profile Username</label>
      <input class='form-control' id='username' name='username' />
    </div>
    <button class='btn btn-danger' type='submit'>Submit</button>
  </form>