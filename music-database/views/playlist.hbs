<div id='mainContent'>
  <!-- Title above the taskbar -->
  <h1>Note Dream</h1>
  
  <!-- Taskbar -->
  <div class="taskbar">
    <div class="task">
      {{#if user}}
        Your Playlists
        <a href='/users/accountSettings'>Account Settings</a>
        <a href='/'>Home Page</a>
      {{else}}
        Your Playlists
        <a href='/users/login'>Log In</a>
        <a href='/users/register'>Sign Up</a>
      {{/if}}
    </div>
  </div>
  
  <!-- Playlist display -->
  <div class="container mt-5">
    <h2 class="mb-4">Your Playlists</h2>
    <table class="table playlistTable">
        <tr>
          <th>Name</th>
          <th>Publicity</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each playlists}}
        <tr>
          <td>{{playlist_name}}</td>
          {{#if public}}
          <td>Public</td>
          {{else}}
          <td>Private</td>
          {{/if}}
          <td><a href='/users/viewplaylist/{{playlist_id}}' class='btn btn-outline-info view-playlist-btn'>View Playlist</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  
  <!-- Playlist creation form -->
  <div class="container mt-5">
    <form id='playlistForm' method='post'>
      <div class='form-group'>
        <h2 class="mb-4">Create a Playlist</h2>
        <h3>Name</h3>
        <input class='form-control' id='addingPlaylist' name='addingPlaylist' maxlength='255' required />
        <h3>Description</h3>
        <p>A visible description for your playlist. Max 2000 characters.</p>
        <input class='form-control' id='description' name='description' maxlength='2000' />
        <h3>Publicity</h3>
        <p>Public playlists can be linked to and viewed by anyone. Private playlists can only be viewed by you.</p>
        <label>
          <input id='publicity' name='publicity' type='checkbox' />
          Public
        </label>
        <br />
        <button type='submit' form='playlistForm' class='btn btn-outline-dark'>Submit</button>
      </div>
    </form>
  </div>
  
  <!-- Error and success messages -->
  {{#each errors}}
    <div class='alert alert-danger'>
      {{this}}
    </div>
  {{/each}}
  {{#if confirmMessage}}
    <div class='alert alert-success'>
      {{confirmMessage}}
    </div>
  {{/if}}
</div>
